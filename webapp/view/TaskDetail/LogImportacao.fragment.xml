<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >

    <Table 
        alternateRowColors="true"
        showSeparators="All"
        items="{ultimoLogImportacao}"
        id="ultimoLogImportacaoTable"
        mode="" 
        >
        <headerToolbar>
            <Toolbar width="auto" height="46px" design="Transparent" visible="true" enabled="true">
                <content>
                    <ToolbarSpacer width=""/>
                </content>
                <tooltip/>
            </Toolbar>
        </headerToolbar>
        <columns>

            <Column width="10%" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Status" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

            <Column width="10%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Num. Linha" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

            <Column width="35%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Conteúdo" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

            <Column width="10%" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Código Msg." width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>


            <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                <header>
                    <Text text="Mensagem" width="auto" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
                </header>
                <footer/>
            </Column>

        </columns>
        <items>
            <ColumnListItem type="Active">
                <cells>


                    <core:Icon
                        src="{= ${MsgType} === 'S' ? 'sap-icon://accept' : 'sap-icon://decline' }"
                        color="{= ${MsgType} === 'S' ? 'green' : 'red'}" />

                    <ObjectIdentifier title="{NumLinha}"
                        text="" titleActive="false" visible="true"/>

                    <Text text="{TextoLinha}" wrapping="true" />

                    <ObjectIdentifier title="{MsgId}/{MsgNumber}"
                        text="" titleActive="false" visible="true"/>

                    <Text text="{Message}" wrapping="true" />

                </cells>
            </ColumnListItem>
        </items>
    </Table>

</core:FragmentDefinition>


