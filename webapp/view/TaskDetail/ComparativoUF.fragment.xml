<core:FragmentDefinition
    xmlns="sap.ui.table"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    >

    <Table
        id="ComparativoUFTable"
        class="tabelaItens"
        keyboardMode="Edit"
        rows="{
            path:'items',
            parameters:{
                templateShareable: true,
                expand:'simulacao,informacao,itemMerc,itemMerc/secao,itemMerc/grupo,itemOrg,negociacao'
                }
            }"
        >
        <toolbar>
            <m:Toolbar>
                <m:ToolbarSpacer/>

                <m:ToggleButton
                    pressed="{view_tab>/SemICMS}"
                    text="Sem ICMS"
                    icon="sap-icon://unpaid-leave"
                    iconFirst="false"
                    type="Transparent"
                    visible="{= !( !${Status} || ${Status} === 'T' ) }"
                    />
            </m:Toolbar>
        </toolbar>
        <columns>
            <Column width="auto" >
                <m:Label text="Mercadoria" />
                <template>
                    <m:Text text="{
                        parts: [ {path: 'itemMerc/ID'}, {path: 'itemMerc/Type'} ],
                        formatter: '.formatter.formatItemMerc'
                        }" wrapping="true" />
                </template>
            </Column>
            <Column width="20%">
                <m:Label text="Descrição" />
                <template>
                    <m:Text text="{itemMerc/Nome}" wrapping="true" />
                </template>
            </Column>
            <Column width="8%">
                <m:Label text="Fornecedor" />
                <template>
                    <m:Text text="{FornecedorID}" wrapping="true" />
                </template>
            </Column>
            <Column width="12%">
                <m:Label text="Seção" />
                <template>
                    <m:Text text="{itemMerc/secao/Nome}" wrapping="true" />
                </template>
            </Column>
            <Column width="18%">
                <m:Label text="Grupo" />
                <template>
                    <m:Text text="{itemMerc/grupo/Nome}" wrapping="true" />
                </template>
            </Column>
            <Column width="4%">
                <m:Label text="UF" />
                <template>
                    <m:Text text="{itemOrg/ID}" wrapping="true" />
                </template>
            </Column>
            <Column width="auto"
                visible="{= !${Status} || ${Status} === 'T' }"
                hAlign="End"
                >
                <m:Label text="C. Bruto" tooltip="Custo Bruto"
                    />
                <template>
                    <m:Text text="{
                        path: 'simulacao/CustoBruto',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: {
                            precision: 16,
                            scale: 6
                            }
                        }" wrapping="true"
                        />
                </template>
            </Column>
            <Column width="auto"
                visible="{= !${Status} || ${Status} === 'T' }"
                hAlign="End"
                >
                <m:Label text="Desconto" visible="{= !${Status} || ${Status} === 'T' }"
                    />
                <template>
                    <m:Text text="{
                        path: 'simulacao/Desconto',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: {
                            precision: 8,
                            scale: 3 }
                        }" wrapping="true"
                        />
                </template>
            </Column>
            <Column width="auto"
                visible="{= !${Status} || ${Status} === 'T' }"
                hAlign="End"
                >
                <m:Label text="Despesas" tooltip="Despesas Acessorias"
                    />
                <template>
                    <m:Text text="{
                        path: 'simulacao/DespesasAcessorias',
                        type: 'sap.ui.model.odata.type.Decimal',
                        constraints: {
                            precision: 16,
                            scale: 6 }
                        }" wrapping="true"
                        />
                </template>
            </Column>
            <Column width="auto"
                visible="{= !( !${Status} || ${Status} === 'T' ) }"
                hAlign="End"
                >
                <m:Label text="C. Novo" tooltip="Custo Novo"
                    />
                <template>
                    <m:VBox
                        >

                        <m:Text text="{
                            path: 'simulacao/CustoReal',
                            type: 'sap.ui.model.odata.type.Decimal',
                            constraints: {
                                precision: 16,
                                scale: 6
                                }
                            }" wrapping="true"
                            />

                        <m:Text text="{
                            path: 'simulacao/CustoRealSemICMS',
                            type: 'sap.ui.model.odata.type.Decimal',
                            constraints: {
                                precision: 16,
                                scale: 6
                                }
                            }" wrapping="true"
                            visible="{view_tab>/SemICMS}"
                            />

                    </m:VBox>
                </template>
            </Column>
            <Column width="auto"
                visible="{= !( !${Status} || ${Status} === 'T' ) }"
                hAlign="End"
                >
                <m:Label text="C. Atual" tooltip="Custo Atual"
                    />
                <template>
                    <m:VBox
                        >

                        <m:Text text="{
                            path: 'informacao/CustoReal',
                            type: 'sap.ui.model.odata.type.Decimal',
                            constraints: {
                                precision: 16,
                                scale: 6
                                }
                            }" wrapping="true"
                            />

                        <m:Text text="{
                            path: 'informacao/CustoRealSemICMS',
                            type: 'sap.ui.model.odata.type.Decimal',
                            constraints: {
                                precision: 16,
                                scale: 6
                                }
                            }" wrapping="true"
                            visible="{view_tab>/SemICMS}"
                            />

                    </m:VBox>
                </template>
            </Column>
            <Column width="auto"
                visible="{= !( !${Status} || ${Status} === 'T' ) }"
                hAlign="End"
                >
                <m:Label text="Var. Cus." tooltip="Variação Custo"
                    />
                <template>
                    <m:VBox
                        >

                        <m:Text text="{
                            path: 'simulacao/VariacaoCustoReal',
                            type: 'sap.ui.model.odata.type.Decimal',
                            constraints: {
                                precision: 12,
                                scale: 2
                                }
                            }" wrapping="true"
                            />

                        <m:Text text="{
                            path: 'simulacao/VariacaoCustoRealSemICMS',
                            type: 'sap.ui.model.odata.type.Decimal',
                            constraints: {
                                precision: 12,
                                scale: 2
                                }
                            }" wrapping="true"
                            visible="{view_tab>/SemICMS}"
                            />

                    </m:VBox>
                </template>
            </Column>
            <Column width="auto">
                <m:Label text="Aprovar" tooltip="Aprovar Custo"/>
                <template>
                    <m:Switch type="AcceptReject" state="{Aprovado}"
                        enabled="{= ${view>/isNegociacaoEmAnalises} &amp;&amp; ${view>/tipoNegociacao} === 'A' }"
                        visible="{
                            parts: [ {path: 'Pai'} ],
                            formatter: '.formatter.isAprovacaoItemVisible'
                            }"
                        />
                </template>
            </Column>
        </columns>
    </Table>

</core:FragmentDefinition>

