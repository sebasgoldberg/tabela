<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form">

    <Button text="Eliminar"
        visible="{view>/isNegociacaoEditavel}"
        type="Reject"
        press="onEliminarNegociacao"
        />
     <Button text="Salvar"
        visible="{= ${view>/isNegociacaoEditavel} || ${view>/isNegociacaoEmAnalises} }"
        type="Emphasized"
        press="onSave"
        />
    <Button text="Enviar Tabela"
        visible="{view>/isNegociacaoEditavel}"
        type="Accept"
        press="onEnviarTabela"
        />
    <Button text="Concluir Analises"
        visible="{view>/isNegociacaoEmAnalises}"
        type="Accept"
        press="onEnviarParaAprovacao"
        />
    <Button text="Aprovar"
        visible="{view>/isNegociacaoEmAprovacao}"
        type="Accept"
        press="onAprovar"
        />
    <Button text="Rejeitar"
        visible="{view>/isNegociacaoEmAprovacao}"
        type="Reject"
        press="onRejeitar"
        />

</core:FragmentDefinition>
